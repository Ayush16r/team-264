from flask import Flask, request, jsonify, send_from_directory
import csv
import os
import json
from datetime import datetime
import random
import string
import joblib
import pandas as pd
from sklearn.ensemble import RandomForestClassifier

app = Flask(__name__)

# ---------------- SAMPLE DATA ----------------
